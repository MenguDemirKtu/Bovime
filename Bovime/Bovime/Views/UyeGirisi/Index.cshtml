<style>
    .cerceve {
        border-style: dashed;
        border-width: 1px;
        border-color: #7c7c7c;
        border-radius: 10px;
    }
</style>

@model Bovime.Models.GirisViewModel
@{
    Layout = "~/Views/_genel.cshtml";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-6 col-lg-5">
        <div class="card-body p-4 cerceve">

            <h4 class="text-center mb-4">Üye Girişi</h4>

            @Html.AntiForgeryToken()

            <div id="hata" class="alert alert-danger d-none"></div>

            <div class="mb-3">
                <label>Kullanıcı Adı</label>
                <input id="kullaniciAdi" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Şifre</label>
                <input id="sifre" type="password" class="form-control" />
            </div>

            <button class="btn btn-primary w-100" onclick="girisYap()">
                Giriş Yap
            </button>

        </div>
    </div>
</div>

<script>
    function girisYap() {

        const data = {
            kullaniciAdi: document.getElementById("kullaniciAdi").value,
            sifre: document.getElementById("sifre").value
        };

        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch('/UyeGirisi/GirisAjax', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            },
            body: JSON.stringify(data)
        })
        .then(res => res.json())
        .then(res => {

            if (res.basarili) {
                window.location.href = res.yonlendir;
            } else {
                const hata = document.getElementById("hata");
                hata.innerText = res.mesaj;
                hata.classList.remove("d-none");
            }

        })
        .catch(err => {
            alert("Sunucu hatası");
            console.error(err);
        });
    }
</script>
