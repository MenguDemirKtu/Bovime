						<script>
							 function kampanyaKullan(kimlik) {
	var modal = new bootstrap.Modal(document.getElementById('kampanyamodal'));
	modal.show();

	$("#kampanyamodalIcerik").html(`
		<div class="text-center p-3">
			<div class="spinner-border"></div>
		</div>
	`);

		$.ajax({
		url: "/Kampanya/KampanyaGoster",
		data: { kim: kimlik },
		type: "GET",
		success: function (html) {
			$("#kampanyamodalIcerik").html(html);
		}
	});

							 }

						</script>