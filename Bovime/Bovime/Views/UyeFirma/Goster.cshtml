				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>

			<div class="modal-body" id="kampanyamodalIcerik">
				<!-- Partial buraya yüklenecek -->
				<div class="text-center p-3">
					<div class="spinner-border"></div>
				</div>
