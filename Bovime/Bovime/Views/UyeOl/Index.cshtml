  
@model Bovime.Models.UyeOlModel
@{
    Layout = "~/Views/_genel.cshtml";
}

<div class="container">
    <div class="card shadow login-card">
        <div class="card-body p-4"> 

            <h4 class="text-center mb-4">Üye Ol</h4>

            @Html.AntiForgeryToken()

            <div id="hata" class="alert alert-danger d-none"></div>
            <div id="basari" class="alert alert-success d-none"></div>

            <div class="mb-3">
                <label>Ad</label>
                <input id="adi" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Soyad</label>
                <input id="soyadi" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Telefon</label>
                <input id="telefon" class="form-control" />
            </div>

            <div class="mb-3">
                <label>E-Posta</label>
                <input id="ePosta" type="email" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Kullanıcı Adı</label>
                <input id="kullaniciAdi" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Şifre</label>
                <input id="sifre" type="password" class="form-control" />
            </div>

            <button class="btn btn-success w-100" onclick="uyeOl()">
                Üye Ol
            </button>

        </div>
    </div>
</div>

<script>
    function uyeOl() {

        const data = {
            adi: document.getElementById("adi").value,
            soyadi: document.getElementById("soyadi").value,
            telefon: document.getElementById("telefon").value,
            ePosta: document.getElementById("ePosta").value,
            kullaniciAdi: document.getElementById("kullaniciAdi").value,
            sifre: document.getElementById("sifre").value
        };

        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch('/UyeOl/UyeOlAjax', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            },
            body: JSON.stringify(data)
        })
        .then(res => res.json())
        .then(res => {

            if (res.basarili) {
                document.getElementById("basari").innerText = res.mesaj;
                document.getElementById("basari").classList.remove("d-none");
            } else {
                document.getElementById("hata").innerText = res.mesaj;
                document.getElementById("hata").classList.remove("d-none");
            }

        })
        .catch(err => {
            alert("Sunucu hatası");
            console.error(err);
        });
    }
</script>
